<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/dp_10" />
            <gradient
                android:endColor="#ffffff"
                android:startColor="#ffffff" />
            <!-- 边框的颜色 -->
            <stroke
                android:width="@dimen/dp_2"
                android:color="#2E87CE" />
            <padding
                android:bottom="@dimen/dp_3"
                android:left="@dimen/dp_4"
                android:right="@dimen/dp_4"
                android:top="@dimen/dp_3" />
        </shape>
    </item>
    <!-- 第二进度条样式，用不怎么到直接设置成了和背景色一样的颜色，隐藏起来 -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/dp_10" />
                <gradient
                    android:endColor="#ffffff"
                    android:startColor="#ffffff" />
            </shape>
        </clip>
    </item>
    <!-- 第一进度条样式，我想修改的，修改成简单的灰色 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <!-- 圆角设置 -->
                <corners android:radius="@dimen/dp_20" />
                <gradient
                    android:endColor="#2E87CE"
                    android:startColor="#2E87CE" />
            </shape>
        </clip>
    </item>
</layer-list>