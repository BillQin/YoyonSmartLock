<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/item_lock_operation_log_indicator"
        android:layout_width="@dimen/dp_5"
        android:layout_height="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_14"
        android:src="@drawable/icon_log_indicator" />

    <TextView
        android:id="@+id/item_lock_operation_log_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/item_lock_operation_log_indicator"
        android:textColor="#4A4A4A"
        android:textSize="@dimen/dp_13"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/item_lock_operation_log_icon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/item_lock_operation_log_date"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"/>

    <TextView
        android:id="@+id/item_lock_operation_log_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_lock_operation_log_date"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/item_lock_operation_log_icon"
        android:textColor="#4A4A4A"
        android:textSize="@dimen/dp_16"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="@dimen/dp_3"
        android:layout_below="@id/item_lock_operation_log_title"
        android:id="@+id/item_lock_operation_log_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/item_lock_operation_log_icon"
        android:textColor="#BBBBBB"
        android:textSize="@dimen/dp_13"
        android:textStyle="bold" />
    <View
        android:background="#E9E9E9"
        android:layout_marginLeft="@dimen/dp_80"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>