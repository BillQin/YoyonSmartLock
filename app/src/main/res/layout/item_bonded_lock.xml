<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_85"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_bonded_lock_thumbnail"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_20"/>

    <TextView
        android:textStyle="bold"
        android:textColor="#4A4A4A"
        android:id="@+id/item_bonded_lock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@id/item_bonded_lock_thumbnail" />
    <ImageView
        android:id="@+id/item_bonded_lock_onlineStatePoint"
        android:layout_below="@id/item_bonded_lock_name"
        android:layout_toRightOf="@id/item_bonded_lock_thumbnail"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"/>
    <TextView
        android:textSize="@dimen/dp_11"
        android:textStyle="bold"
        android:id="@+id/item_bonded_lock_onlineState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@id/item_bonded_lock_onlineStatePoint"
        android:layout_below="@id/item_bonded_lock_name"/>
    <ImageView
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_14"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_20"
        android:src="@drawable/item_right_arrow" />
    <View
        android:background="#E9E9E9"
        android:layout_marginLeft="@dimen/dp_88"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>