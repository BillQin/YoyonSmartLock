<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lockKeyModifyActivity_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@drawable/actionbar_bg"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_20">

        <LinearLayout
            android:id="@+id/lockKeyModifyActivity_returnLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_20"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@drawable/left_arrow_white" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/modify_key"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lockKeyModifyActivity_deleteLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_5">
            <TextView
                android:layout_marginRight="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/delete"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_16" />
            <ImageView
                android:id="@+id/right_img"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_gravity="center_vertical"
                android:src="@drawable/delete_white" />
        </LinearLayout>
    </RelativeLayout>

    <!--修改名称-->
    <RelativeLayout
        android:id="@+id/lockKeyModifyActivity_modifyName"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <ImageView
            android:id="@+id/mineFragment_deviceIcon"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/mine_device" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/mineFragment_deviceIcon"
            android:text="@string/modify_name"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/item_right_arrow"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_13"/>
    </RelativeLayout>
    <View
        android:background="@android:color/white"
        android:layout_height="@dimen/dp_1"
        android:layout_width="@dimen/dp_55"/>
    <!--修改权限-->
    <RelativeLayout
        android:id="@+id/lockKeyModifyActivity_modifyProperty"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <ImageView
            android:id="@+id/mineFragment_aboutIcon"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/mine_about" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/mineFragment_aboutIcon"
            android:text="@string/modify_authority"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/item_right_arrow"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_13"/>
    </RelativeLayout>
    <View
        android:background="@android:color/white"
        android:layout_height="@dimen/dp_1"
        android:layout_width="@dimen/dp_55"/>
    <!--修改密码-->
    <RelativeLayout
        android:id="@+id/lockKeyModifyActivity_modifyPassword"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <ImageView
            android:id="@+id/mineFragment_serviceIcon"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/item_icon_password" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/mineFragment_serviceIcon"
            android:text="@string/modify_password"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/item_right_arrow"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_13"/>
    </RelativeLayout>

    <Button
        android:id="@+id/lockKeyModifyActivity_save"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/blue_button_bg"
        android:text="保存"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_16"
        android:textStyle="bold" />
</LinearLayout>