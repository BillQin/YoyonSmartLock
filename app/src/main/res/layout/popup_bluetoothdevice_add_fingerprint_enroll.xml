<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <Button
        android:id="@+id/popup_bluetoothdevice_add_fingerpring_enroll_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/blue_button_bg"
        android:textAllCaps="false"
        android:text="@string/cancel"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_18"
        android:textStyle="bold" />

    <TextView
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:id="@+id/popup_bluetoothdevice_add_fingerpring_enroll_tips1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/popup_bluetoothdevice_add_fingerpring_enroll_cancel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:text="@string/enrolling_fingerprint_tips2"
        android:textStyle="bold"
        android:textColor="#9B9B9B"
        android:textSize="@dimen/dp_14" />
    <TextView
        android:id="@+id/popup_bluetoothdevice_add_fingerpring_enroll_tips2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/popup_bluetoothdevice_add_fingerpring_enroll_tips1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/enrolling_fingerprint_tips1"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:textStyle="bold"
        android:textColor="#4A4A4A"
        android:textSize="@dimen/dp_18" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/popup_bluetoothdevice_add_fingerpring_enroll_animotion"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_above="@id/popup_bluetoothdevice_add_fingerpring_enroll_tips2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_40"
        app:lottie_fileName="FingerPrintAnimation.json"
        app:lottie_imageAssetsFolder="images/" />
</RelativeLayout>