<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">

    <Button
        android:textAllCaps="false"
        android:id="@+id/popup_bluetoothdevice_add_fingerpring_nextStep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/blue_button_bg"
        android:text="@string/next"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/popup_bluetoothdevice_add_fingerpring_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_23"
        android:text="@string/enroll_fingerprint"
        android:textColor="#4A4A4A"
        android:textSize="@dimen/dp_22"
        android:textStyle="bold" />
    <TextView
        android:layout_above="@id/popup_bluetoothdevice_add_fingerpring_nextStep"
        android:id="@+id/popup_bluetoothdevice_add_fingerpring_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/enroll_fingerprint_tips"
        android:textColor="#4A4A4A"
        android:textStyle="bold"
        android:textSize="@dimen/dp_16"/>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_below="@id/popup_bluetoothdevice_add_fingerpring_tile"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_135"
        android:layout_centerHorizontal="true"
        app:lottie_imageAssetsFolder="images/"
        app:lottie_autoPlay="true"
        app:lottie_fileName="touchid.json"
        app:lottie_loop="true" />
</RelativeLayout>