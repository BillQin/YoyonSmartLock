    <RelativeLayout
        android:id="@+id/mineFragment_checkUpdate"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="@dimen/dp_55">

        <ImageView
            android:id="@+id/mineFragment_checkUpdateIcon"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/item_icon_check_update" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/mineFragment_checkUpdateIcon"
            android:text="@string/check_update"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/item_right_arrow"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_13"/>
    </RelativeLayout>
