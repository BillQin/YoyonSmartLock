    <!--设置-->
    <RelativeLayout
        android:id="@+id/mineFragment_userAgreement"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <ImageView
            android:id="@+id/mineFragment_settingIcon"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/mine_user_agreement" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/mineFragment_settingIcon"
            android:text="用户协议"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/item_right_arrow"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_13"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mineFragment_privacyPolicy"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <ImageView
            android:id="@+id/mineFragment_settingIcon"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/mine_privacy_policy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/mineFragment_settingIcon"
