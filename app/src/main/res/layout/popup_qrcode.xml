<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_linearlayout">

    <TextView
        android:id="@+id/popup_qrcode_title"
        android:textSize="@dimen/dp_22"
        android:textStyle="bold"
        android:textColor="#4A4A4A"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_share" />
    <ImageView
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:id="@+id/popup_qrcode_image"
        android:layout_below="@id/popup_qrcode_title"
        android:layout_width="@dimen/dp_230"
        android:layout_height="@dimen/dp_230"
        />
    <TextView
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:id="@+id/popup_qrcode_tips"
        android:layout_below="@id/popup_qrcode_image"
        android:textSize="@dimen/dp_15"
        android:textStyle="bold"
        android:textColor="#4A4A4A"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>