<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popup_warn_buttonGroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <Button
            android:id="@+id/popup_warn_confirm"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/gray_button_bg"
            android:textAllCaps="false"
            android:text="@string/ok"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold" />

        <Button
            android:id="@+id/popup_warn_cancel"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/blue_button_bg"
            android:textAllCaps="false"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/popup_warn_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:layout_above="@id/popup_warn_buttonGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_50"
        android:textColor="#BBBBBB"
        android:textSize="@dimen/dp_16"/>

    <TextView
        android:id="@+id/popup_warn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_above="@id/popup_warn_body"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="提示"
        android:textColor="#4A4A4A"
        android:textSize="@dimen/dp_20"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/animation_view"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_above="@id/popup_warn_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_25"
        android:src="@drawable/popup_warn" />
</RelativeLayout>